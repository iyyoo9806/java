import java.util.Scanner;

public class Test {
	  boolean test = true; //true 중간, false 기말
	   int kor=0;
	   int eng =0;
	   int math =0;
	   
	   public void main() {
	      System.out.println("입력하실 시험을 선택해주세요.[1]중간 [2]기말");
	      Scanner scanner = new Scanner(System.in);
	      String asdf = scanner.nextLine();
	      if(asdf.equals("1")) {
	         this.test =true;
	         System.out.println("국어 점수를 입력해주세요.");
	         this.kor = scanner.nextInt();
	         System.out.println("영어 점수를 입력해주세요.");
	         this.eng = scanner.nextInt();
	         System.out.println("수학 점수를 입력해주세요.");
	         this.math = scanner.nextInt();
	      }else if(asdf.equals("2")) {
	         this.test =false;
	         System.out.println("국어 점수를 입력해주세요.");
	         this.kor = scanner.nextInt();
	         System.out.println("영어 점수를 입력해주세요.");
	         this.eng = scanner.nextInt();
	         System.out.println("수학 점수를 입력해주세요.");
	         this.math = scanner.nextInt();
	      }else {
	         System.out.println("오입력");
	      }
	   }

}
