package zNote;

public class Q {
	public static int solution(int num) {
		int answer = 0;
		int a = 0;
		for (int i = 0; i < 500; i++) {
			if (a == 1) {
				return answer;
			} else {
				if (num % 2 == 0) {
					a = num / 2;
				} else {
					a = num * 3 + 1;
				}
			}
		}
		return -1;
	}

	public static void main(String[] args) {
				System.out.println(solution(6));
	}
}
