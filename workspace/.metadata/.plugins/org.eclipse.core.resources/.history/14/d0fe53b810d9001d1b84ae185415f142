package zNote;

public class Q {
	public static int solution(int num) {
		int answer = 0;
		if (num == 1) {
			return answer;
		} else {
			int a = num;
			for (int i = 0; i < 500; i++) {
				if(a%2==0) {
					a = a/2; 
				}else {
					a = a*3+1;
				}
			}
		}
		return -1;
	}

	public static void main(String[] args) {
		System.out.println(solution(6));
	}
}
